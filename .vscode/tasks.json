{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Packet Sniffer",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "sniffer.cpp",   // your main cpp file
                "-lpcap",
                "-o",
                "sniffer"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
